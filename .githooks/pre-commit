#!/bin/sh
# Pre-commit hook for TypeScript and ESLint checks

echo "ğŸ” Running pre-commit checks..."

# Check if we're in a pnpm workspace
if [ ! -f "package.json" ]; then
  echo "âŒ No package.json found"
  exit 1
fi

# Run TypeScript type check
echo "ğŸ“ Checking TypeScript..."
if ! pnpm run type-check; then
  echo "âŒ TypeScript check failed. Please fix the errors before committing."
  exit 1
fi

# Run ESLint
echo "ğŸ”§ Running ESLint..."
if ! pnpm run lint; then
  echo "âŒ ESLint check failed. Please fix the linting errors before committing."
  echo "ğŸ’¡ Tip: Run 'pnpm run lint:fix' to auto-fix some issues"
  exit 1
fi

echo "âœ… All checks passed! Proceeding with commit..."
exit 0
